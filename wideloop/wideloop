library(tidyverse)

#EXAMPLE#

#read and drop columns that are not values
df <- read.csv("/Users/aidanastridge/Documents/32100353.csv", stringsAsFactors = TRUE)
df <- df[-c(3,5:10,12:15)]

#pivot wide
df <- df %>%
  pivot_wider(names_from = Estimates, values_from = VALUE)

#create seperate datasets with for loop
for (x in levels(df$GEO)) {
  a <- df  
  b <- subset(a, GEO  == x)
  assign(paste0(x), b, envir = .GlobalEnv)}
